<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">
    <Properties>
        <Property name="module-name">${spring:spring.application.name}</Property>
        <Property name="log-path">$${env:MARKETPLACE_LOG_PATH:-${sys:user.dir}/logs}/${module-name}</Property>

        <Property name="archive">${log-path}/archive</Property>
        <Property name="PID">????</Property>
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
        <Property name="LOG_LEVEL_PATTERN">%5p</Property>
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSSXXX</Property>
        <Property name="CONSOLE_LOG_PATTERN">%clr{%d{${LOG_DATEFORMAT_PATTERN}}}{faint} %clr{${LOG_LEVEL_PATTERN}} %clr{${sys:PID}}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
        <Property name="FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} ${sys:PID} --- [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>


    </Properties>
    <Appenders>
        <Console name="Console-Appender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${sys:CONSOLE_LOG_PATTERN}" charset="UTF-8"/>
        </Console>
        <RollingFile name="RollingFile-Appender"
                     fileName="${log-path}/app.log"
                     filePattern="${archive}/app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${sys:FILE_LOG_PATTERN}" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
            <DefaultRolloverStrategy max="60"/>
        </RollingFile>
        <!--Maybe use standard log4j2 gelf layout-->
        <!--https://logging.apache.org/log4j/2.x/manual/layouts.html#GELFLayout-->
        <!--tcp:localhost:12201-->
        <Gelf name="gelf"
              host="${env:GELF_HOST:-tcp:localhost}"
              port="${env:GELF_PORT:-12201}"
              version="1.1"
              extractStackTrace="true"
              filterStackTrace="true"
              mdcProfiling="true"
              includeFullMdc="true"
              maximumMessageSize="16384"
              originHost="%host"
              ignoreExceptions="false">
            <Field name="timestamp"
                   pattern="%d${LOG_DATEFORMAT_PATTERN}"/>
            <Field name="level"
                   pattern="${LOG_LEVEL_PATTERN}"/>
            <Field name="simpleClassName"
                   pattern="%C{1}"/>
            <Field name="className"
                   pattern="%C"/>
            <Field name="server.simple"
                   pattern="%host{simple}"/>
            <Field name="server.fqdn"
                   pattern="%host{fqdn}"/>
            <Field name="application"
                   literal="${module-name}"/>
            <Field name="java"
                   literal="${java:runtime} - ${java:os}"/>
        </Gelf>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console-Appender"/>
            <AppenderRef ref="RollingFile-Appender"/>
            <AppenderRef ref="gelf"/>
        </Root>
    </Loggers>
</Configuration>